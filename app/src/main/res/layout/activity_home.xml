<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeActivity">
    <ImageView
        android:id="@+id/VLogo"
        android:layout_width="200dp"

        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/incon"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/image_icon_princile"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/help"
        android:layout_marginTop="10dp"
        android:id="@+id/help"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/image_aide"
        />


    <ImageView
        android:id="@+id/map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/mapicon"
        android:clickable="true"
        android:contentDescription="@string/image_carte"
        android:focusable="true"
        />
    <ListView

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:id="@+id/lstView"/>
    <ImageView
        android:id="@+id/how"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/howto"
        android:focusable="true"
        android:contentDescription="@string/image_help"
        android:clickable="true"
        />

</RelativeLayout>